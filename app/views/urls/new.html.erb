<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Create Shortened URL Information</h5>
    </div>
    <div class="card-body">
        
        <%= form_with model: @url, local: true do |form| %>
            <% if @url.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@url.errors.count, "error") %> prohibited this url from being saved:</h2>
                <ul>
                  <% @url.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
                <%= form.label :original_url, "Enter URL to shorten", class: 'form-label' %>
                <%= form.text_field :original_url, class: 'form-control', class: 'form-control' %>
            </div>
            <p></p>

            <div class="mb-3">

              <%= form.label :original_url, "Enter Customize your link (Example: #{request.base_url}/alias)", class: 'form-label' %>
              <div class="input-group">
                <span class="input-group-text"><%= request.base_url %>/</span>
                <%= form.text_field :alias, class: 'form-control', placeholder: 'alias' %>
              </div>
            </div>


            <div class="form-group">
              <p></p>
              <%= form.submit 'Shorten', class: 'btn btn-lg btn-primary fw-500 me-sm-3 mb-3 mb-sm-' %>
            </div>
        <% end %>

    </div>
  </div>
  
  <div class="mt-3">
    <%= link_to 'Back to Home', root_path, class: 'btn btn-info' %>
  </div>
</div>



